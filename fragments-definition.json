{
  "family": "fragments",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::381492117052:role/LabRole",
  "taskRoleArn": "arn:aws:iam::381492117052:role/LabRole",
  "containerDefinitions": [
    {
      "name": "fragments",
      "image": "fragments:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "value": "nadi-fragments"
        },
        {
          "name": "HTPASSWD_FILE",
          "value": "tests/.htpasswd"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/fargate/fragments",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "fragments"
        }
      }
    }
  ]
}
